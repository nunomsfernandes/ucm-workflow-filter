<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>manifest.hda</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/classes</directory>
            <outputDirectory>component/WorkflowFilterComponent</outputDirectory>
            <includes>
                <include>WorkflowFilterComponent.hda</include>
                <include>readme.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/target/classes</directory>
            <outputDirectory>component/WorkflowFilterComponent/classes</outputDirectory>
            <excludes>
                <exclude>*.htm</exclude>
                <exclude>*.hda</exclude>
                <exclude>*.txt</exclude>
                <exclude>*.cfg</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/main/resources</directory>
            <outputDirectory>component/WorkflowFilterComponent</outputDirectory>
            <includes>
                <include>*.htm</include>
                <include>*.cfg</include>
                <include>*.hda</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/component/WorkflowFilterComponent/lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <scope>compile</scope>
            <excludes>
                <exclude>oracle.ucm:idcserver</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>
